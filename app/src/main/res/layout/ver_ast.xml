<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLAST"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="1dp"
    android:padding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CLASTX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/black"
        android:padding="0dp">

        <ImageView
            android:id="@+id/IVAste"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="0.5dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/astico1" />

        <TextView
            android:id="@+id/TVNomAsteuc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:fontFamily="sans-serif-condensed-ASTium"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:text="Texto de Nombre Asteroide"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/IVAste"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVTamano"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0.5dp"
            android:fontFamily="sans-serif-condensed-ASTium"
            android:gravity="center_vertical"
            android:paddingStart="3dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            android:text="TamaÃ±o del asterisco"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/IVAste"
            app:layout_constraintTop_toBottomOf="@+id/TVNomAsteuc" />

        <TextView
            android:id="@+id/TVFapproach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:fontFamily="sans-serif-condensed-ASTium"
            android:paddingLeft="3dp"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:text="Fecha de aproximacion"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/IVAste"
            app:layout_constraintTop_toBottomOf="@+id/TVTamano" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>